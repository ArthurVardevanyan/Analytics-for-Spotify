	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
			"name": "Django",
			"type": "python",
			"request": "launch",
			"envFile": "${workspaceFolder}/.env",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"runserver",
				"--noreload"
			],
			"django": true,
		},
		{
			"name": "Django Tests",
			"type": "python",
			"request": "launch",
			"envFile": "${workspaceFolder}/.env",
			"module": "coverage",
			"env": {
				"TEST": "test"
			},
			"args": [
				"run",
				"--source=monitoringBackend,webBackend",
				"manage.py",
				"test",
			],
			"django": true,
		}
	]
}
